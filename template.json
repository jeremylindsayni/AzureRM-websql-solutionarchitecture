{
  "parameters": {
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "skuTier": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "metadata": {
        "description": "Choose what level of WebFarm"
      }
    },
    "skuCode": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3"
      ],
      "metadata": {
        "description": "Choose what pricing tier of WebFarm"
      }
    },
    "edition": {
      "type": "string"
    },
    "databaseName": {
      "type": "string"
    },
    "serverName": {
      "type": "string"
    }
  },
  "variables": {
    "collation": "SQL_Latin1_General_CP1_CI_AS",
    "maxSizeBytes": "2147483648",
    "requestedServiceObjectiveId": "dd6d99bb-f193-4ec1-86f2-43d3bccbc49c",
    "serverLocation": "uksouth",
    "name": "mywebsiteapplication-web",
    "hostingEnvironment": "",
    "location": "UK South",
    "workerSize": "0",
    "subscriptionId": "9330c17d-62d0-458a-b76d-2f7bd6f1f44e",
    "hostingPlanName":  "farm"
  },
  "resources": [
    {
      "name": "[variables('name')]",
      "type": "Microsoft.Web/sites",
      "properties": {
        "siteConfig": {
          "connectionStrings": [
            {
              "name": "defaultConnection",
              "ConnectionString": "[concat('Data Source=tcp:' , reference(concat('Microsoft.SQL/servers/',parameters('serverName'), '-sqlserver')).fullyQualifiedDomainName , ',1433;Initial Catalog=',reference(concat('Microsoft.SQL/servers/',parameters('serverName'), '-sqlserver')),';User Id=', parameters('administratorLogin'),'@',reference(concat('Microsoft.SQL/servers/',parameters('serverName'), '-server')).fullyQualifiedDomainName,';Password=',parameters('administratorLoginPassword'),';')]",
              "type": "SQLAzure"
            }
          ],
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference('microsoft.insights/components/mywebsiteapplication', '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_Mode",
              "value": "recommended"
            },
            {
              "name": "DiagnosticServices_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
              "value": "1.0.0"
            },
            {
              "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
              "value": "disabled"
            },
            {
              "name": "InstrumentationEngine_EXTENSION_VERSION",
              "value": "~1"
            },
            {
              "name": "SnapshotDebugger_EXTENSION_VERSION",
              "value": "disabled"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
              "value": "~1"
            }
          ]
        },
        "name": "[variables('name')]",
        "serverFarmId": "[concat('/subscriptions/', variables('subscriptionId'),'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', concat(toLower(variables('hostingPlanName')), toLower(parameters('skuTier'))))]",
        "hostingEnvironment": "[variables('hostingEnvironment')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', concat(toLower(variables('hostingPlanName')), '-farm-', toLower(parameters('skuTier'))))]",
        "microsoft.insights/components/mywebsiteapplication"
      ],
      "apiVersion": "2016-03-01",
      "location": "[variables('location')]",
      "resources": [
        {
          "apiVersion": "2015-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('name'))]"
          ],
          "properties": {
            "RepoUrl": "https://github.com/jeremylindsayni/BasicMVCApplication.git",
            "branch": "master"
          }
        }
      ]
    },
    {
      "apiVersion": "2016-09-01",
      "name": "[concat(toLower(variables('hostingPlanName')), '-farm-', toLower(parameters('skuTier')))]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[variables('location')]",
      "properties": {
        "name": "[concat(toLower(variables('hostingPlanName')), '-farm-', toLower(parameters('skuTier')))]",
        "workerSizeId": "[variables('workerSize')]",
        "numberOfWorkers": "1",
        "hostingEnvironment": "[variables('hostingEnvironment')]"
      },
      "sku": {
        "Tier": "[parameters('skuTier')]",
        "Name": "[parameters('skuCode')]"
      }
    },
    {
      "apiVersion": "2015-05-01",
      "name": "mywebsiteapplication",
      "type": "microsoft.insights/components",
      "location": "uksouth",
      "properties": {
        "ApplicationId": "[variables('name')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "name": "[concat(toLower(parameters('serverName')), '-sqlserver')]",
      "type": "Microsoft.Sql/servers",
      "location": "[variables('serverLocation')]",
      "apiVersion": "2014-04-01-preview",
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "version": "12.0"
      },
      "resources": [
        {
          "name": "[concat(toLower(parameters('databaseName')), '-db')]",
          "type": "databases",
          "location": "[variables('serverLocation')]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', concat(toLower(parameters('serverName')), '-sqlserver'))]"
          ],
          "properties": {
            "edition": "[parameters('edition')]",
            "collation": "[variables('collation')]",
            "maxSizeBytes": "[variables('maxSizeBytes')]",
            "requestedServiceObjectiveId": "[variables('requestedServiceObjectiveId')]"
          }
        },
        {
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', concat(toLower(parameters('serverName')), '-sqlserver'))]"
          ],
          "location": "[variables('serverLocation')]",
          "name": "AllowAllWindowsAzureIps",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          },
          "type": "firewallrules"
        }
      ]
    }
  ],
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0"
}